
<div class="signup">
<% provide(:title, "Sign up") %>
  <div class="authform signupform">
    <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :id => "signup-form"}) do |f| %>
      <h3>Sign up</h3>
      <%= devise_error_messages! %>

      <div class="form-group">
        <%= f.input :email, :required => true, :autofocus => true, class: "form-control" %>
        <%= f.input :first_name, :required => true, class: "form-control" %>
        <%= f.input :last_name, :required => true, class: "form-control" %>
        <%= f.input :profile_name, :required => true, class: "form-control" %>

        <%= f.input :password, :required => true, :autocomplete => "off", class: "form-control" %>
        <%= f.input :password_confirmation, :required => true, :autocomplete => "off", class: "form-control" %>
      </div>

      <div class="form-actions">
        <div class="gender">
          <label class="radio-buttons">
            <%= f.input :gender, :as => :radio_buttons, :style => "display: inline", collection: [:neutral, :female, :male] %>
          </label>
        </div>
      </div>

      <div class="form-actions">
        <%= f.submit "Sign up", :class => "button radius right" %>
      </div>
    <% end %>
  </div>
</div>
